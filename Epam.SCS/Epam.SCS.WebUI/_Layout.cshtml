@using Epam.SCS.WebUI.Models
<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("styles", required: false)
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/include/styles.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <!— Collect the nav links, forms, and other content for toggling —>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Users <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="~/Users/ShowUsers">Show all</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Skills <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a href="~/Skills/AddSkill">Add</a></li>
                                    }
                                    <li><a href="~/Skills/ShowSkills">Show all</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Accounts <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="~/Accounts/ShowAccounts">Show Accounts</a></li>
                                </ul>
                            </li>
                            <li>
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Service<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="~/Skills/ManageUsersSkills"> Manage my skills</a></li>
@if (User.IsInRole("Admin"))
{
                                    <li><a href="~/Service/GenerateFilter"> Generate filter</a></li>
}
                                    <li><a href="~/Users/EditUserInfo">Edit my info</a></li>
                                </ul>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="~/Auth/Logout" title="" style="font-size:large">Hello: @User.Identity.Name Sign out</a>
                                }
                                else
                                {
                                    <a href="~/Auth/Login" style="font-size:large"> Guest. Sign in</a>
                                }
                            </li>
                        </ul>
                    </div><!— /.navbar-collapse —>
                </div><!— /.container-fluid —>
            </nav>
        }
        @RenderBody()

    </div>
        @RenderPage("~/_FooterPartial.cshtml")
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/include/scripts.js"></script>    
    @RenderSection("scripts", required: false)
</body>
</html>